<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.senior.skillcourt" >

    <uses-sdk android:minSdkVersion="11" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/soccer_ball"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".welcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".logIn"
            android:label="@string/title_activity_login"
            android:parentActivityName=".welcome"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.senior.skillcourt.welcome" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".createAccount1"
            android:label="@string/title_activity_create_account1"
            android:parentActivityName=".welcome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.senior.skillcourt.welcome" />
        </activity>
        <activity
            android:name=".warning"
            android:label="@string/title_activity_warning"
            android:parentActivityName=".welcome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.senior.skillcourt.welcome" />
        </activity>
        <activity
            android:name=".home"
            android:label="@string/title_activity_home"
            android:parentActivityName=".warning" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.senior.skillcourt.warning" />
        </activity>
        <activity
            android:name=".createAccount2"
            android:label="@string/title_activity_create_account2"
            android:parentActivityName=".createAccount1" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.senior.skillcourt.createAccount1" />
        </activity>
        <activity
            android:name=".createAccount3"
            android:label="@string/title_activity_create_account3"
            android:parentActivityName=".createAccount2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.senior.skillcourt.createAccount2" />
        </activity>
        <activity
            android:name=".accountCreated"
            android:label="@string/title_activity_account_created"
            android:parentActivityName=".createAccount3" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.senior.skillcourt.createAccount3" />
        </activity>
    </application>

</manifest>
